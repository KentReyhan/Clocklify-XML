<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp" >

    <TextView
        android:id="@+id/activitiesTimerText"
        style="@style/LabelText.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00 : 30 : 22" />

    <TextView
        android:id="@+id/activitiesDetailText"
        style="@style/LabelText.regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Treadmill" />

    <TextView
        android:id="@+id/activitiesStartEndTimeText"
        style="@style/GroupedListText.regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:drawableStartCompat="@drawable/ic_clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitiesTimerText"
        tools:text=" 09:00:00 - 10:30:03" />

    <TextView
        android:id="@+id/activitiesCoordinatesText"
        style="@style/GroupedListText.regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:drawableStartCompat="@drawable/ic_marker_lavender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitiesDetailText"
        tools:text="09.915543.77.21157" />


</androidx.constraintlayout.widget.ConstraintLayout>
