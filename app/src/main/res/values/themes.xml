<resources>
    <!-- Base application theme. -->
    <style name="Theme.App.Main" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary theme color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_primary</item>

        <!-- Secondary theme color -->
        <item name="colorSecondary">@color/lavender</item>
        <item name="colorSecondaryVariant">@color/lavender</item>
        <item name="colorOnSecondary">@color/lavender</item>

        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_clocklify_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Main</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
    </style>

</resources>