<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextFieldStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="TextFieldStyle.white" parent="TextFieldStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LabelText">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LabelText.Bold" parent="LabelText">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="LabelText.Red" parent="LabelText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="LabelText.Lavender" parent="LabelText">
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="CTAButtonText">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="ButtonText.White" parent="ButtonText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBarText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppBarText.White" parent="AppBarText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ViewTitle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="lineHeight">33sp</item>
        <item name="android:textColor">@color/dark_primary</item>
    </style>

</resources>
